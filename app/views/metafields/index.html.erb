<p id="notice"><%= notice %></p>
<h1>Metafields</h1>

<%= link_to 'New Metafield', new_metafield_path %>

<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Namespace</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @metafields.each do |metafield| %>
      <tr>
        <td><%= metafield.key %></td>
        <td><%= metafield.namespace %></td>
        <td><%= metafield.value %></td>
        <td><%= link_to 'Edit', edit_metafield_path(metafield) %></td>
        <td><%= link_to 'Destroy', metafield, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= form_tag import_metafields_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import csv" %>
<% end %>